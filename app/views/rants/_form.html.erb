<%= form_for([organization, rant], local: true) do |form| %>
  <% if rant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(rant.errors.count, "error") %> prohibited this rant from being saved:</h2>

      <ul>
      <% rant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :organization_id, value: @organization.id %>

  <div class="field">
    <%= form.text_area :body, class: "textarea", rows: "5", placeholder: "Rant out your feelings, talk shit, spill tea, let everything out here"%>
  </div>

  <div class="field is-grouped is-grouped-right">
    <p class="control">
      <%= form.submit "Submit Rant", class: "button is-medium is-primary" %>
    </p>
  </div>
<% end %>
