<div class="card">
  <div class="card-content">
    <div class="media">
      <div class="media-left">
        <figure class="image is-48x48">
          <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
        </figure>
      </div>
      <div class="media-content">
        <p class="title is-4">Rant about <%= link_to rant.organization.name, rant.organization %></p>
        <p class= "subtitle is-7"><%= time_ago_in_words(rant.created_at) %> ago</p>
      </div>
    </div>

    <div class="content" id="content">
        <%= simple_format rant.body %>
    </div>
    <nav class="level is-mobile" style="margin-top: 1em;">
      <div class="level-left">
        <div class = "level-item">
          <strong>
            Share this rant 
          </strong>
        </div>
        <div class="level-item">
          <a data-toggle="tooltip" title="Share on Facebook" href="https://www.facebook.com/sharer/sharer.php?u=<%= rant_url(rant) %>"><%= fa_icon "facebook" %></a>
        </div>
        <div class="level-item">
          <a data-toggle="tooltip" title="Share on Twitter" href="https://twitter.com/intent/tweet?text=<%= rant_url(rant) %>"><%= fa_icon "twitter" %></a>
        </div>
      </div>
    </nav>
  </div>
</div>
